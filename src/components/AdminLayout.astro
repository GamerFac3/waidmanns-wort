---
import BaseHead from './BaseHead.astro';
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="de">
	<head>
		<BaseHead title={`${title} | Admin | ${SITE_TITLE}`} description="Admin Bereich" />
	</head>
	<body class="bg-gray-100 min-h-screen">
		<nav class="bg-[#2d3e28] text-white shadow-lg">
			<div class="max-w-7xl mx-auto px-4">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center space-x-8">
						<a href="/admin" class="font-bold text-lg">Admin</a>
						<div class="flex space-x-4">
							<a
								href="/admin"
								class:list={[
									"px-3 py-2 rounded-md text-sm",
									currentPath === '/admin' ? 'bg-[#4a6741]' : 'hover:bg-[#4a6741]'
								]}
							>
								Dashboard
							</a>
							<a
								href="/admin/artikel"
								class:list={[
									"px-3 py-2 rounded-md text-sm",
									currentPath.startsWith('/admin/artikel') ? 'bg-[#4a6741]' : 'hover:bg-[#4a6741]'
								]}
							>
								Artikel
							</a>
							<a
								href="/admin/bilder"
								class:list={[
									"px-3 py-2 rounded-md text-sm",
									currentPath.startsWith('/admin/bilder') ? 'bg-[#4a6741]' : 'hover:bg-[#4a6741]'
								]}
							>
								Bilder
							</a>
						</div>
					</div>
					<div class="flex items-center space-x-4">
						<a href="/" class="text-sm hover:underline" target="_blank">Website ansehen</a>
						<form action="/api/auth/signout" method="POST">
							<button type="submit" class="bg-red-600 hover:bg-red-700 px-3 py-1.5 rounded text-sm">
								Abmelden
							</button>
						</form>
					</div>
				</div>
			</div>
		</nav>

		<main class="max-w-7xl mx-auto px-4 py-8">
			<slot />
		</main>
	</body>
</html>
