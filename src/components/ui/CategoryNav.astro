---
import { CATEGORIES } from '../../consts';

interface Props {
	activeCategory?: string;
	showAll?: boolean;
	class?: string;
}

const { activeCategory, showAll = true, class: className = '' } = Astro.props;
---

<nav class:list={['flex flex-wrap gap-2', className]}>
	{showAll && (
		<a
			href="/kategorien"
			class:list={[
				'px-4 py-2 text-sm font-medium rounded-full transition-all duration-200',
				!activeCategory
					? 'bg-[#2d3e28] text-white shadow-md'
					: 'bg-white text-[#2d3e28] border-2 border-gray-200 hover:border-[#4a6741] hover:bg-[#4a6741]/5'
			]}
		>
			Alle
		</a>
	)}

	{CATEGORIES.map((cat) => (
		<a
			href={`/kategorien/${cat.id}`}
			class:list={[
				'px-4 py-2 text-sm font-medium rounded-full transition-all duration-200',
				activeCategory === cat.id
					? 'bg-[#2d3e28] text-white shadow-md'
					: 'bg-white text-[#2d3e28] border-2 border-gray-200 hover:border-[#4a6741] hover:bg-[#4a6741]/5'
			]}
		>
			{cat.name}
		</a>
	))}
</nav>
