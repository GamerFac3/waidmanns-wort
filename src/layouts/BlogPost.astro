---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
}

const { title, description, pubDate } = Astro.props;
---

<html lang="de">
	<head>
		<BaseHead title={`${title} | ${SITE_TITLE}`} description={description} />
	</head>

	<body class="bg-[#f5f0e6] text-gray-800 text-lg leading-relaxed">
		<Header />
		<main class="max-w-3xl mx-auto px-4 py-8">
			<article>
				<a href="/" class="inline-block mb-4 text-sm text-[#4a6741] hover:text-[#c9a54e] transition-colors">
					&larr; Zurück zur Übersicht
				</a>
				<div class="bg-white rounded-lg p-6 md:p-8 shadow-md">
					<div class="mb-6 pb-4 border-b-2 border-[#2d3e28]">
						<h1 class="text-3xl font-bold text-[#2d3e28] mb-2">{title}</h1>
						<div class="text-gray-500 text-sm">
							{pubDate.toLocaleDateString('de-DE', {
								year: 'numeric',
								month: 'long',
								day: 'numeric'
							})}
						</div>
					</div>
					<div class="prose prose-lg max-w-none prose-headings:text-[#2d3e28] prose-a:text-[#4a6741] hover:prose-a:text-[#c9a54e]">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
